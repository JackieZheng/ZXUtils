<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_test_bitmap"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/btn_test_circleBitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="圆形"/>

    <Button
        android:id="@+id/btn_test_markBitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="水印"/>

    <Button
        android:id="@+id/btn_test_blackBitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="黑白"/>

    <Button
        android:id="@+id/btn_test_roundBitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="圆角"/>

    <Button
        android:id="@+id/btn_test_greyBitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="灰度"/>

    <Button
        android:id="@+id/btn_test_conbineBitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="合并"/>

    <Button
        android:id="@+id/btn_test_rotateBitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="旋转"/>
</LinearLayout>